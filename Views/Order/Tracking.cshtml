@model List<FoodOrderingSystem.Models.Entities.OrderTracking>

@{
    ViewData["Title"] = "Sipariş Takibi";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<style>
    /* =========================
       GENEL SAYFA
       ========================= */
    .container {
        max-width: 800px;
    }

    /* Başlık */
    .page-title {
        font-size: 30px;
        font-weight: 800;
        text-align: center;
        margin-bottom: 35px;
        color: #2c3e50;
    }

    /* =========================
       TIMELINE
       ========================= */
    .timeline {
        position: relative;
        list-style: none;
        padding-left: 50px;
        margin: 40px 0;
    }

        /* Ana dikey çizgi */
        .timeline::before {
            content: "";
            position: absolute;
            left: 18px;
            top: 0;
            width: 4px;
            height: 100%;
            background: linear-gradient(to bottom, #ff4757, #ff6b81);
            border-radius: 10px;
        }

    /* =========================
       TIMELINE ITEM
       ========================= */
    .timeline-item {
        position: relative;
        margin-bottom: 35px;
    }

    /* Nokta */
    .timeline-icon {
        position: absolute;
        left: 6px;
        top: 0;
        width: 26px;
        height: 26px;
        border-radius: 50%;
        background: #bdc3c7;
        border: 4px solid white;
        box-shadow: 0 4px 10px rgba(0,0,0,0.15);
        z-index: 2;
    }

    /* İçerik kartı */
    .timeline-content {
        background: #ffffff;
        padding: 14px 18px;
        border-radius: 12px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.08);
        margin-left: 30px;
        transition: transform .2s ease, box-shadow .2s ease;
    }

        .timeline-content:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 24px rgba(0,0,0,0.12);
        }

        .timeline-content h5 {
            margin: 0;
            font-size: 17px;
            font-weight: 700;
            color: #2c3e50;
        }

        .timeline-content small {
            display: block;
            margin-top: 4px;
            font-size: 13px;
            color: #7f8c8d;
        }

    /* =========================
       DURUM RENKLERİ
       ========================= */

    /* Tamamlanan */
    .completed .timeline-icon {
        background: linear-gradient(135deg, #2ecc71, #58d68d);
    }

    .completed h5 {
        color: #2ecc71;
    }

    /* Aktif */
    .active .timeline-icon {
        background: linear-gradient(135deg, #f39c12, #f1c40f);
        animation: pulse 1.5s infinite;
    }

    .active h5 {
        color: #f39c12;
    }

    /* =========================
       AKTİF ANİMASYON
       ========================= */
    @@keyframes pulse {
        0%

    {
        box-shadow: 0 0 0 0 rgba(243, 156, 18, 0.6);
    }

    70% {
        box-shadow: 0 0 0 12px rgba(243, 156, 18, 0);
    }

    100% {
        box-shadow: 0 0 0 0 rgba(243, 156, 18, 0);
    }

    }
</style>


<!-- şiparişlerim ksımındaki detay sayfasına tıklayınca olan sayfa burda trigger ile olan şeyleri çekiyoruz -->
<div class="container mt-5">
    <h2 class="text-center mb-4">📦 Order Tracking</h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-warning text-center">
            Bu sipariş için henüz durum bilgisi oluşturulmamış.
        </div>
    }
    else
    {
        <ul class="timeline">

            @foreach (var item in Model)
            {
                // Duruma göre CSS belirleyelim
                string cssClass = item.StatusName switch
                {
                    "Preparing" => "active",
                    "On The Way" => "active",
                    "Delivered" => "completed",
                    "Cancelled" => "completed",
                    _ => ""
                };

                <li class="timeline-item @cssClass">
                    <div class="timeline-icon"></div>

                    <div class="timeline-content">
                        <h5>@item.StatusName</h5>
                        <small>@item.TrackingTime.ToString("dd MMM yyyy HH:mm")</small>
                    </div>
                </li>
            }

        </ul>
    }
</div>
