@model FoodOrderingSystem.Models.ViewModels.UserDetailView
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Kullanıcı Detayları";
}

<style>
    .profile-card {
        background: white;
        padding: 35px;
        width: 75%;
        margin: auto;
        border-radius: 12px;
        box-shadow: 0 3px 12px rgba(0,0,0,0.1);
    }

    .stat-row {
        display: flex;
        gap: 20px;
        justify-content: flex-start;
        margin-top: 20px;
        flex-wrap: wrap;
    }

    .stat-box {
        background: #f1f1f1;
        padding: 20px;
        border-radius: 12px;
        width: 170px;
        text-align: center;
    }

        .stat-box h3 {
            margin: 0;
            font-size: 26px;
            color: #2c3e50;
        }

        .stat-box p {
            margin: 5px 0 0;
            color: #777;
        }

    .btn-delete {
        padding: 10px 18px;
        background: #e74c3c;
        color: white;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        transition: 0.2s;
        margin-top: 20px;
    }

        .btn-delete:hover {
            background: #c0392b;
        }

    .btn-back {
        display: inline-block;
        padding: 10px 16px;
        background: #3498db;
        color: white;
        text-decoration: none;
        border-radius: 6px;
        font-size: 14px;
        margin-bottom: 15px;
        transition: 0.2s;
    }

        .btn-back:hover {
            background: #217dbb;
        }
</style>
<!--admin kullancı deyalrnı görme sayfası data view le yapıldı -->
<a href="/Admin/Users" class="btn-back">← Back</a>

<div class="profile-card">

    <h2>@Model.FullName</h2>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Phone:</strong> @Model.Phone</p>
    <p><strong>Address:</strong> @Model.Address</p>
    <p><strong>Role:</strong> @Model.Role</p>

    <hr />

    <div class="stat-row">
        <div class="stat-box">
            <h3>@Model.TotalOrders</h3>
            <p>Order</p>
        </div>

        <div class="stat-box">
            <h3>@Model.TotalReviews</h3>
            <p>REview</p>
        </div>

        <div class="stat-box">
            <h3>@Model.TotalRestaurants</h3>
            <p>Restaurant</p>
        </div>
    </div>
   
    <!-- delete user butonu sayesinde kullanıcsilme deleteuser actionuna gider-->
    <form asp-action="DeleteUser" asp-controller="Admin" method="post" 
          onsubmit="return confirm('Are you sure you want to delete this user?');">
        <input type="hidden" name="id" value="@Model.UserId" />
        <button class="btn-delete">Delete User</button>
    </form>

</div>
