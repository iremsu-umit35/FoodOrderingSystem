@model FoodOrderingSystem.Models.ViewModels.AdminDashboardViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .dashboard-card {
        background: rgba(255, 255, 255, 0.75);
        backdrop-filter: blur(10px);
        border-radius: 16px;
        padding: 25px 20px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.12);
        transition: 0.3s;
        border: 1px solid rgba(255,255,255,0.4);
    }

        .dashboard-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 14px 28px rgba(0,0,0,0.18);
        }

    .dashboard-title {
        font-size: 14px;
        font-weight: 600;
        color: #34495e;
        margin-bottom: 6px;
        opacity: 0.9;
    }

    .dashboard-number {
        font-size: 34px;
        font-weight: 700;
        color: #2c3e50;
    }

    /* Gradient header line */
    .dashboard-card::before {
        content: "";
        height: 4px;
        width: 100%;
        background: linear-gradient(90deg, #2980b9, #8e44ad);
        border-radius: 20px;
        display: block;
        margin-bottom: 15px;
    }

    .today-box {
        margin-top: 30px;
        padding: 15px 20px;
        background: #f4f6f9;
        border-left: 5px solid #3498db;
        border-radius: 10px;
        font-size: 17px;
        color: #2c3e50;
        font-weight: 600;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
</style>
<!-- admin ilk girdiğinde gözüken dashboarda viewi-->
<!--Admin ana sayfası ilk girişde olan sayfa-->
<div class="row g-4">

    <div class="col-md-3">
        <div class="dashboard-card text-center">
            <div class="dashboard-title">Total Users </div>
            <div class="dashboard-number">@Model.TotalUsers</div> <!-- toplam kullancı sayısı-->

        </div>
    </div>

    <div class="col-md-3">
        <div class="dashboard-card text-center">
            <div class="dashboard-title">Total Restaurants </div>
            <div class="dashboard-number">@Model.TotalRestaurants</div> <!-- toplam restorant sayısı-->

        </div>
    </div>

    <div class="col-md-3">
        <div class="dashboard-card text-center">
            <div class="dashboard-title">Restaurant Owner Waiting for Confirm</div>
			<div class="dashboard-number">@Model.PendingRestaurantOwners</div> <!-- onay bekleyen restoran sahipleri sayısı-->
        </div>
    </div>

    <div class="col-md-3">
        <div class="dashboard-card text-center">
            <div class="dashboard-title">Total Orders </div>
			<div class="dashboard-number">@Model.TotalOrders</div> <!-- toplam sipariş sayısı-->
        </div>
    </div>

</div>

<div class="today-box">
	Todays's Order Count': <strong>@Model.TodayOrders</strong> <!-- bugünkü sipariş sayısı-->
</div>
