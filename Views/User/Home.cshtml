@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    ViewData["Title"] = "Kullanıcı Anasayfa";
}
<!-- KULLANICI GİRİŞ YAPTIĞINDA GÖRDÜĞÜ SAYFADIR -->
<!-- HERO / BANNER -->
<div class="hero-banner" style="background-image:url('/images/image.jpg');">
    <div class="hero-overlay">
        <h1>
            ALL CITIES IN TURKEY <br />
            WHERE YOU CAN PLACE ONLINE FOOD ORDERS
        </h1>
    </div>
</div>

<!-- ŞEHİR LİSTESİ -->
<div class="city-container">

    @{
        List<string> sehirler = new()
        {
        "İzmir","Ankara","İzmir","Erzurum",
        "İzmir","Erzurum","İzmir","Ankara",
        "İzmir","Ankara","İzmir","Erzurum",
        "İzmir","Erzurum","İzmir","Erzurum",
        "Erzurum","Erzurum"
        };
    }

    <h2 class="city-title">Popular Cities</h2>

    <div class="city-grid">
        @foreach (var sehir in sehirler)
        {
            <!-- user controller list metoduna iletildi -->
            <a asp-controller="User"
               asp-action="List"  
               asp-route-city="@sehir"
               class="city-item">
                @sehir
            </a>
        }
    </div>
</div>

<style>
    
    .hero-banner {
        width: 100%;
        height: 60vh;
        min-height: 300px;
        background-size: cover;
        background-position: center;
        position: relative;
    }

    .hero-overlay {
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.45);
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

        .hero-overlay h1 {
            color: #fff;
            font-size: 34px;
            font-weight: 800;
            max-width: 900px;
            line-height: 1.3;
            padding: 0 20px;
        }

    /* =======================
       ŞEHİR LİSTESİ
       =======================*/
    .city-container {
        width: 85%;
        margin: 60px auto;
    }

    .city-title {
        text-align: center;
        margin-bottom: 35px;
        font-size: 28px;
        font-weight: 700;
        color: #2c3e50;
    }

    .city-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 25px;
    }

    .city-item {
        background: white;
        padding: 18px 10px;
        border-radius: 14px;
        text-align: center;
        font-size: 20px;
        font-weight: 700;
        color: #ff4757;
        text-decoration: none;
        box-shadow: 0 4px 14px rgba(0,0,0,0.12);
        transition: all 0.25s ease;
    }

        .city-item:hover {
            background: #ff4757;
            color: white;
            transform: translateY(-6px);
            box-shadow: 0 10px 22px rgba(255,71,87,0.35);
        }

    /* =======================
       RESPONSIVE
       =======================*/
    @@media (max-width: 768px) {
        .hero-overlay h1

    {
        font-size: 24px;
    }

    .city-title {
        font-size: 22px;
    }

    .city-item {
        font-size: 18px;
    }

    }
</style>
