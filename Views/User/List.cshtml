@model List<FoodOrderingSystem.Models.Entities.Restaurant>

@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    ViewData["Title"] = "Restoranlar";
}
<!-- KULLANICI ŞEHİR SEÇTİKTEN SONRA GÖRDÜĞÜ RESTORANT KARTLARI SAYFASIDIR  -->
<!-- HERO -->
<div class="hero-banner" style="background-image:url('/images/image2.jpg');">
    <div class="hero-overlay">
        <h1>@ViewData["City"] Online Food Order</h1>
    </div>
</div>

<h2 class="page-title">Restoranlar - @ViewData["City"]</h2>
<a href="/User/Home" class="btn-back">← Home</a>


<div class="restaurant-container">
    @foreach (var restaurant in Model)
    {
        <div class="restaurant-card">

            <!-- Açık / Kapalı -->
            @if (restaurant.IsOpen== true)
            {
                <div class="status-open">Open</div>
            }
            else
            {
                <div class="status-closed">Closed</div>
            }

            <img src="@restaurant.ImageUrl" class="restaurant-img" />

            <h3>@restaurant.RestaurantName</h3>

            <p class="address">@restaurant.Address</p>
            <p class="phone">📞 @restaurant.Phone</p>

            <div class="info-row">
                <span class="rating-box">⭐ @restaurant.AverageRating</span>
                <span class="min-order">Min: @restaurant.MinOrderAmount ₺</span>
            </div>
            <!-- user controller detail metodu çalışır butona basıldığında -->
            <a class="detail-btn"
               asp-controller="User"
               asp-action="Details"
               asp-route-id="@restaurant.RestaurantId">
                Detail
            </a>
        </div>
    }
</div>

<style>
    /* =======================
       HERO
       =======================*/
    .hero-banner {
        width: 100%;
        height: 45vh;
        min-height: 300px;
        background-size: cover;
        background-position: center;
        position: relative;
    }

    .hero-overlay {
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.45);
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .hero-overlay h1 {
            color: #fff;
            font-size: 34px;
            font-weight: 800;
        }

    /* =======================
       BAŞLIK
       =======================*/
    .page-title {
        text-align: center;
        margin: 40px 0 30px;
        font-size: 28px;
        font-weight: 700;
        color: #2c3e50;
    }

    /* =======================
       RESTORAN KARTLARI
       =======================*/
    .restaurant-container {
        width: 85%;
        margin: auto;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 30px;
    }

    .restaurant-card {
        background: #fff;
        border-radius: 16px;
        padding: 16px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.12);
        position: relative;
        transition: 0.25s ease;
    }

        .restaurant-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 26px rgba(0,0,0,0.18);
        }

    /* Açık / Kapalı */
    .status-open,
    .status-closed {
        position: absolute;
        top: 12px;
        right: 12px;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 700;
        color: white;
    }

    .status-open {
        background: #2ecc71;
    }

    .status-closed {
        background: #e74c3c;
    }

    /* Görsel */
    .restaurant-img {
        width: 100%;
        height: 160px;
        object-fit: cover;
        border-radius: 12px;
        margin-bottom: 12px;
    }

    /* Metinler */
    .restaurant-card h3 {
        font-size: 20px;
        font-weight: 700;
        margin-bottom: 6px;
    }

    .address,
    .phone {
        font-size: 14px;
        color: #555;
        margin-bottom: 4px;
    }

    /* Bilgi satırı */
    .info-row {
        display: flex;
        justify-content: space-between;
        margin: 10px 0;
    }

    .rating-box {
        background: #fff3cd;
        padding: 4px 10px;
        border-radius: 8px;
        font-weight: 700;
    }

    .min-order {
        font-weight: 600;
    }

    /* Detay butonu */
    .detail-btn {
        display: block;
        text-align: center;
        margin-top: 12px;
        padding: 10px;
        background: #ff4757;
        color: white;
        font-weight: 700;
        border-radius: 10px;
        text-decoration: none;
        transition: 0.2s;
    }

        .detail-btn:hover {
            background: #e84118;
        }

    /* =======================
       RESPONSIVE
       =======================*/
    @@media (max-width: 768px) {
        .hero-overlay h1

    {
        font-size: 24px;
    }

    .page-title {
        font-size: 22px;
    }

    }

    .btn-back {
        display: inline-block;
        padding: 10px 16px;
        background: #3498db;
        color: white;
        text-decoration: none;
        border-radius: 6px;
        font-size: 14px;
        margin-bottom: 15px;
        transition: 0.2s;
    }

        .btn-back:hover {
            background: #217dbb;
        }
</style>


