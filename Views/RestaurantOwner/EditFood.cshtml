@using FoodOrderingSystem.Models.ViewModels
@model FoodEditViewModel

@{
    Layout = "~/Views/Shared/_LayoutRestaurant.cshtml";
}

<style>

    /* SAYFA BAŞLIĞI */
    h2 {
        margin-bottom: 20px;
        color: #343a40;
    }

    /* FORM CARD */
    .form-card {
        background: white;
        padding: 25px;
        border-radius: 8px;
        box-shadow: 0 3px 8px rgba(0,0,0,0.12);
        max-width: 700px;
    }

        /* LABEL STIL */
        .form-card label {
            font-weight: 600;
            color: #444;
        }

    /* INPUT, TEXTAREA */
    .form-control {
        width: 100%;
        padding: 10px 12px;
        border-radius: 6px;
        border: 1px solid #ccc;
        margin-top: 5px;
        font-size: 15px;
        transition: border .2s;
    }

        .form-control:focus {
            border-color: #ff4757;
            outline: none;
        }

    /* BUTON */
    .btn-save {
        background: #ff4757;
        color: white;
        padding: 10px 20px;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        font-weight: bold;
        margin-top: 10px;
        font-size: 15px;
        transition: background .2s;
    }

        .btn-save:hover {
            background: #e84118;
        }

    /* RESIM */
    .image-preview {
        margin-bottom: 10px;
    }

        .image-preview img {
            border-radius: 6px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        }

    .text-muted {
        color: #777;
        margin-top: 5px;
        font-size: 13px;
    }

    .btn-back {
        display: inline-block;
        padding: 10px 16px;
        background: #3498db;
        color: white;
        text-decoration: none;
        border-radius: 6px;
        font-size: 14px;
        margin-bottom: 15px;
        transition: 0.2s;
    }

        .btn-back:hover {
            background: #217dbb;
        }

</style>

<!-- YEMEKLERİ DÜZENLEME VİEWİ -->
<h2>🍽 Edit Food</h2>
<a href="/RestaurantOwner/Foods" class="btn-back">← Back</a>

<div class="form-card">

    <form asp-action="EditFood" method="post" enctype="multipart/form-data">

        <input type="hidden" asp-for="Food.FoodId" />
        <input type="hidden" asp-for="Food.ImageUrl" />

        <div class="mb-3">
            <label>Food Name</label>
            <input asp-for="Food.FoodName" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Description</label>
            <textarea asp-for="Food.Description" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label>Price (₺)</label>
            <input asp-for="Food.Price" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Current Image</label><br />
            @if (!string.IsNullOrEmpty(Model.Food.ImageUrl))
            {
                <img src="@Model.Food.ImageUrl" width="150" />
            }
            else
            {
                <span class="text-muted">No image</span>
            }
        </div>

        <div class="mb-3">
            <label>Upload New Image</label>
            <input type="file" name="imageFile" class="form-control" />
        </div>

        <button class="btn-save">Save Changes</button>

    </form>


    <hr />

    <h4>💰 Price History</h4>

    @if (Model.PriceHistory != null && Model.PriceHistory.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Old Price</th>
                    <th>New Price</th>
                    <th>Changed At</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.PriceHistory)
                {
                    <tr>
                        <td>@item.OldPrice</td>
                        <td>@item.NewPrice</td>
                        <td>@item.ChangedAt</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">No price changes yet.</p>
    }

</div>

