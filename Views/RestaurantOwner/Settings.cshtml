@model FoodOrderingSystem.Models.ViewModels.OwnerRestaurantSettingsViewModel
@{
    Layout = "~/Views/Shared/_LayoutRestaurant.cshtml";
}

<style>

    /* BAŞLIK */
    h2 {
        margin-bottom: 20px;
        color: #343a40;
    }

    /* SUCCESS MSG */
    .success-box {
        background: #d4edda;
        color: #155724;
        padding: 12px 15px;
        border-left: 4px solid #28a745;
        border-radius: 6px;
        margin-bottom: 20px;
        font-size: 15px;
    }

    /* FORM CARD */
    .settings-card {
        background: white;
        padding: 25px;
        border-radius: 8px;
        max-width: 700px;
        box-shadow: 0 3px 8px rgba(0,0,0,0.12);
    }

        /* LABEL */
        .settings-card label {
            font-weight: 600;
            color: #444;
        }

    /* INPUT */
    .form-control {
        width: 100%;
        padding: 10px 12px;
        border-radius: 6px;
        border: 1px solid #ccc;
        margin-top: 5px;
        font-size: 15px;
        transition: border .2s;
    }

        .form-control:focus {
            border-color: #ff4757;
            outline: none;
        }

    /* TEXTAREA */
    textarea.form-control {
        resize: vertical;
    }

    /* CHECKBOX */
    .custom-check {
        display: flex;
        align-items: center;
        margin-top: 10px;
        gap: 8px;
    }

        .custom-check input {
            width: 18px;
            height: 18px;
            cursor: pointer;
        }

        .custom-check label {
            cursor: pointer;
            font-size: 15px;
            color: #444;
        }

    /* SAVE BUTTON */
    .btn-save {
        background: #ff4757;
        color: white;
        padding: 10px 22px;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        font-size: 15px;
        font-weight: bold;
        margin-top: 10px;
        transition: background .2s;
    }

        .btn-save:hover {
            background: #e84118;
        }

</style>


<!--RESTORANTIN AYARLARI KISMI BURDA DEĞİŞTİRİR İSTEDİĞİ ŞEYLERİ-->
<h2>⚙️ Restaurant Settings</h2>

@if (TempData["success"] != null)
{
    <div class="success-box">@TempData["success"]</div>
}

<div class="settings-card">

    <form method="post" asp-action="Settings">

        <input type="hidden" asp-for="RestaurantId" />

        <!-- NAME -->
        <div class="mb-3">
            <label>Restaurant Name</label>
            <input class="form-control" asp-for="RestaurantName" />
        </div>

        <!-- ADDRESS -->
        <div class="mb-3">
            <label>Address</label>
            <input class="form-control" asp-for="Address" />
        </div>

        <!-- PHONE -->
        <div class="mb-3">
            <label>Phone</label>
            <input class="form-control" asp-for="Phone" />
        </div>

        <!-- DESCRIPTION -->
        <div class="mb-3">
            <label>Description</label>
            <textarea class="form-control" asp-for="Description" rows="3"></textarea>
        </div>

        <!-- MIN ORDER -->
        <div class="mb-3">
            <label>Minimum Order Amount (₺)</label>
            <input type="number" class="form-control" asp-for="MinOrderAmount" />
        </div>

        <!-- IS OPEN -->
        <div class="custom-check">
            <input asp-for="IsOpen" type="checkbox" />
            <label for="IsOpen">Is Restaurant Open?</label>
        </div>

        <!-- SAVE -->
        <button class="btn-save">Save Changes</button>

    </form>

</div>
