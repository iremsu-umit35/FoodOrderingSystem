@model FoodOrderingSystem.Models.DTOs.AddFoodDTO
@{
    Layout = "~/Views/Shared/_LayoutRestaurant.cshtml";
}

 <!--resrorant yemek ekleme htlm sayfası -->


<style>

    /* SAYFA BAŞLIĞI */
    h2 {
        margin-bottom: 20px;
        color: #343a40;
    }

    /* FORM KART */
    .form-card {
        background: white;
        padding: 25px;
        border-radius: 8px;
        box-shadow: 0 3px 8px rgba(0,0,0,0.12);
        max-width: 700px;
    }

        /* LABEL */
        .form-card label {
            font-weight: 600;
            color: #444;
        }

    /* INPUTS */
    .form-control {
        width: 100%;
        padding: 10px 12px;
        border-radius: 6px;
        border: 1px solid #ccc;
        margin-top: 5px;
        font-size: 15px;
        transition: border .2s;
    }

        .form-control:focus {
            border-color: #ff4757;
            outline: none;
        }

    /* BUTTON */
    .btn-save {
        background: #ff4757;
        color: white;
        padding: 10px 20px;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        font-weight: bold;
        margin-top: 10px;
        font-size: 15px;
        transition: background .2s;
    }

        .btn-save:hover {
            background: #e84118;
        }

    .btn-back {
        display: inline-block;
        padding: 10px 16px;
        background: #3498db;
        color: white;
        text-decoration: none;
        border-radius: 6px;
        font-size: 14px;
        margin-bottom: 15px;
        transition: 0.2s;
    }

        .btn-back:hover {
            background: #217dbb;
        }

</style>

 <!-- YEMEK EKLEME VİEWİ-->
<h2>➕ Add Food</h2>

<a href="/RestaurantOwner/Foods" class="btn-back">← Back</a>

<div class="form-card"> <!-- bu formdan alınan veriler restorantowner conrrollındaki addfood metoduna gider -->
    <form asp-controller="RestaurantOwner"
          asp-action="AddFood"
          method="post">

        @Html.AntiForgeryToken()
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label>Food Name</label>
            <input asp-for="FoodName" class="form-control" />
            <span asp-validation-for="FoodName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Description</label>
            <textarea asp-for="Description" rows="3" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label>Price (₺)</label>
            <input asp-for="Price" class="form-control" placeholder="200,00" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <button class="btn-save">Save</button>
    </form>
</div>